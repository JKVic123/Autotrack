            <children>
                <Label text="AutoTrack Point of Sale (POS)">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                    <children>
                        <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Logout" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </HBox>
    </top>
    <left>
        <VBox prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
            </BorderPane.margin>
            <children>
                <Label text="Product Search">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <TextField fx:id="searchField" promptText="Search products by name..." />
                <TableView fx:id="productSearchTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="searchNameColumn" prefWidth="250.0" text="Name" />
                        <TableColumn fx:id="searchPriceColumn" prefWidth="100.0" text="Price" />
                        <TableColumn fx:id="searchStockColumn" prefWidth="60.0" text="Stock" />
                        <TableColumn fx:id="searchActionColumn" prefWidth="150.0" text="Action" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </left>
    <center>
        <VBox prefWidth="600.0" spacing="10.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" left="5.0" right="10.0" top="10.0" />
            </BorderPane.margin>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Current Transaction">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                            <children>
                                <Label fx:id="customerNameLabel" text="Current Customer: Walk-in" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <VBox spacing="5.0" style="-fx-background-color: #f4f4f4; -fx-padding: 10; -fx-background-radius: 8;">
                    <children>
                        <Label text="Load Customer's Online Cart" />
                        <HBox spacing="10.0">
                            <children>
                                <TextField fx:id="customerSearchField" promptText="Enter customer username..." HBox.hgrow="ALWAYS" />
                                <Button fx:id="loadCartButton" onAction="#onLoadCustomerCart" text="Load Cart" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <TableView fx:id="cartTable" prefHeight="400.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="cartNameColumn" prefWidth="220.0" text="Name" />
                        <TableColumn fx:id="cartPriceColumn" prefWidth="100.0" text="Price" />
                        <TableColumn fx:id="cartQtyColumn" prefWidth="120.0" text="Quantity" />
                        <TableColumn fx:id="cartTotalColumn" prefWidth="120.0" text="Line Total" />
                    </columns>
                </TableView>
                <VBox alignment="CENTER_RIGHT" spacing="5.0">
                    <children>
                        <Label fx:id="totalLabel" text="TOTAL: â‚±0.00">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="clearSaleButton" onAction="#onClearSaleClick" prefHeight="50.0" prefWidth="200.0" text="Clear Sale" HBox.hgrow="ALWAYS" />
                        <Button fx:id="completeSaleButton" onAction="#onCompleteSaleClick" prefHeight="50.0" prefWidth="400.0" text="Complete Sale" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
