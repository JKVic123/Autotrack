<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.avengers.avengersgroup.PaymentController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Confirm Your Order">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>
        <VBox style="-fx-background-color: #f4f4f4; -fx-padding: 10; -fx-background-radius: 8;">
            <children>
                <Label text="TOTAL AMOUNT DUE:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="totalLabel" text="â‚±0.00">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
            </children>
        </VBox>
        <Label text="Select a Payment Method:" />
        <ListView fx:id="paymentListView" prefHeight="100.0" />
        <Button fx:id="confirmPaymentButton" onAction="#onConfirmPaymentClick" maxWidth="Infinity" prefHeight="40.0" text="Confirm Payment with Selected Method" />
        <Label fx:id="paymentMessageLabel" wrapText="true" />
        <VBox spacing="10.0" style="-fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0; -fx-padding: 15 0 0 0;">
            <children>
                <Label text="Add New Payment Method">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <HBox spacing="10.0">
                    <children>
                        <ComboBox fx:id="paymentTypeComboBox" prefWidth="150.0" promptText="Type">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Credit Card" />
                                    <String fx:value="Gcash" />
                                    <String fx:value="Cash on Delivery" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                        <TextField fx:id="paymentDetailsField" promptText="Simulated Details (e.g., **** 1234 or 09...)" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <Button fx:id="addMethodButton" onAction="#onAddMethodClick" maxWidth="Infinity" text="Add and Save Method" />
                <Label fx:id="addMethodMessageLabel" wrapText="true" />
            </children>
        </VBox>
    </children>
</VBox>
